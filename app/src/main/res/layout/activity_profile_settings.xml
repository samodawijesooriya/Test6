<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettings">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:onClick="GobackToUserProfile"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="41dp"
        android:text="Your Profile"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/roundcorner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="Add Profile Picture"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/arrow_profile"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:onClick="GoToTheAddProfilePicture"
            android:rotation="180"
            app:srcCompat="@drawable/back" />

    </LinearLayout>

    <TextView
        android:id="@+id/User_Name"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="271dp"
        android:text="Name"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/roundcorner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/User_Rname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="It's Mathee"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/arrow_Name"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:onClick="GoTOChangeName"
            android:rotation="180"
            app:srcCompat="@drawable/back" />
    </LinearLayout>


    <TextView
        android:id="@+id/User_Mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="300dp"
        android:text="Mobile"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/roundcorner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/User_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="0772258722"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/arrow_Mobile"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:onClick="GoToChangeNumber"
            android:rotation="180"
            app:srcCompat="@drawable/back" />
    </LinearLayout>


    <TextView
        android:id="@+id/User_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="395dp"
        android:text="Email"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/roundcorner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/User_Remail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="itsmathee@gmail.com"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/arrow_Email"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:onClick="GoToChangeEmail"
            android:rotation="180"
            app:srcCompat="@drawable/back" />
    </LinearLayout>


    <TextView
        android:id="@+id/User_changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="490dp"
        android:text="Change Password"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/roundcorner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/User_RchangePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="******"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/arrow_ChangePassword"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:onClick="GoToChnagePassword"
            android:rotation="180"
            app:srcCompat="@drawable/back" />
    </LinearLayout>


    <Button
        android:id="@+id/profileSettings_logout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="99dp"
        android:backgroundTint="#000053"
        android:fontFamily="@font/rambla"
        android:text="Logout"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/profileSettings_deleteUser"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/profileSettings_logout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/montserrat"
        android:backgroundTint="#000053"
        android:text="Delete User"
        android:textSize="18sp" />
</RelativeLayout>