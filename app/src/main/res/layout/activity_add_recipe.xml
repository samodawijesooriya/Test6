<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecipe">

    <!-- Recipe Add Title -->
    <TextView
        android:id="@+id/addRecipe_addRecipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Add Recipe"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/addRecipe_backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toEndOf="@+id/addRecipe_backBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/addRecipe_backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:onClick="GoBackToMyRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <!-- Enter Recipe Name Text -->

    <!-- Recipe Name Input -->

    <TextView
        android:id="@+id/addRecipe_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat"
        android:text="Enter Recipe Name"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_addRecipeTitle" />

    <EditText
        android:id="@+id/addRecipe_recipeNameText"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:background="@drawable/roundcorner"
        android:hint="Name"
        android:paddingStart="20dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_recipeName"
        android:layout_marginTop="8dp"/>

    <!-- Ingredients Label -->
    <TextView
        android:id="@+id/addRecipe_ingredientText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Add ingredients one by one"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_recipeNameText" />

    <!-- Ingredients Input -->
    <EditText
        android:id="@+id/addRecipe_ingredientTextAdd"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:background="@drawable/roundcorner"
        android:gravity="start|top"
        android:hint="Add ingredients here"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_ingredientText"
        android:layout_marginTop="8dp"/>

    <!-- Method Label -->
    <TextView
        android:id="@+id/addRecipe_methodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Write the method"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_ingredientTextAdd" />

    <!-- Method Input -->
    <EditText
        android:id="@+id/addRecipe_methodAdd"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:background="@drawable/roundcorner"
        android:gravity="start|top"
        android:hint="Add method here"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_methodText"
        android:layout_marginTop="8dp"/>

    <!-- Preparation Time Label -->
    <TextView
        android:id="@+id/addRecipe_addRecipe_AddPreparationTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Preparation Time"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_methodAdd" />

    <!-- Preparation Time Input -->
    <EditText
        android:id="@+id/addRecipe_AddPreparationTime"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundcorner"
        android:hint="Time"
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_addRecipe_AddPreparationTimeText" />

    <!-- Add Category Label -->
    <TextView
        android:id="@+id/addRecipe_addRecipe_AddPreparationTimeText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Category"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_methodAdd" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundcorner"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_addRecipe_AddPreparationTimeText3">

        <!-- Drop Down -->
        <Spinner
            android:id="@+id/addRecipe_dropdown_spinner"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingStart="20dp" />
    </LinearLayout>

