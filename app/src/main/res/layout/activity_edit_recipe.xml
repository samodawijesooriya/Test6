<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecipe">

    <!-- Recipe Add Title -->
    <TextView
        android:id="@+id/editRecipe_editRecipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Edit Recipe"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editRecipe_backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toEndOf="@+id/editRecipe_backBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/editRecipe_backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:onClick="GoBackToMyRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <!-- Enter Recipe Name Text -->
    <TextView
        android:id="@+id/editRecipe_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/montserrat"
        android:text="Enter Recipe Name"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_editRecipeTitle" />

    <!-- Recipe Name Input -->
    <EditText
        android:id="@+id/editRecipe_recipeNameText"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundcorner"
        android:hint="Name"
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_recipeName" />

    <!-- Ingredients Label -->
    <TextView
        android:id="@+id/editRecipe_ingredientText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Add ingredients one by one"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_recipeNameText" />

    <!-- Ingredients Input -->
    <EditText
        android:id="@+id/editRecipe_ingredientTextAdd"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundcorner"
        android:gravity="start|top"
        android:hint="Add ingredients here"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_ingredientText" />

    <!-- Method Label -->
    <TextView
        android:id="@+id/editRecipe_methodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Write the method"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_ingredientTextAdd" />

    <!-- Method Input -->
    <EditText
        android:id="@+id/addRecipe_methodAdd"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundcorner"
        android:gravity="start|top"
        android:hint="Add method here"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_methodText" />

    <!-- Preparation Time Label -->
    <TextView
        android:id="@+id/editRecipe_EditPreparationTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Preparation Time"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_methodAdd" />

    <!-- Preparation Time Input -->
    <EditText
        android:id="@+id/addRecipe_AddPreparationTime"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundcorner"
        android:hint="Time"
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_EditPreparationTimeText" />

    <!-- Add Category Label -->
    <TextView
        android:id="@+id/editRecipe_EditPreparationTimeText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Category"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_methodAdd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundcorner"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_EditPreparationTimeText3">

        <!-- Drop Down -->
        <Spinner
            android:id="@+id/editRecipe_dropdown_spinner"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingStart="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editRecipeLinearLayput"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe_AddPreparationTime">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Upload image / video"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/EdituploadImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/baseline_image_24" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#000" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/EdituploadVideo"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_music_video_24"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/EditprogressBarimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminateTint="#000053"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Save Button -->

    <!-- Cancel Button -->

    <Button
        android:id="@+id/editRecipe_SaveBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:backgroundTint="#000053"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipeLinearLayput" />

    <Button
        android:id="@+id/editRecipe_CancelBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:backgroundTint="#FCFCFF"
        android:text="Cancel"
        android:textColor="#000053"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editRecipe_SaveBtn"
        app:layout_constraintTop_toBottomOf="@+id/editRecipeLinearLayput"
        app:strokeColor="#000053"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

