<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <TextView
        android:id="@+id/history_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rambla"
        android:text="History"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/history_searchView"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/roundcorner"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_textView8"
        app:layout_constraintVertical_bias="0.014"
        app:queryHint="Search History" />

    <ScrollView
        android:layout_width="415dp"
        android:layout_height="570dp"
        android:layout_marginBottom="32dp"
        android:fillViewport="true"
        android:id="@+id/history_ScrollerView1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/history_searchView"
        app:layout_constraintBottom_toTopOf="@+id/history_bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_cardView1"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/history_desserts1"
                        android:layout_width="344dp"
                        android:layout_height="179dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/milkrice1" />

                    <TextView
                        android:id="@+id/history_videoDuration1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_corner_video_duration"
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="10dp"
                        android:text="30 min"
                        android:textColor="#FCFCFF"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserrat"
                        android:text="• Milk Rice"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Updated Just now"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Second CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_cardView2"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/history_desserts2"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/applepie1" />

                    <TextView
                        android:id="@+id/history_videoDuration2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_corner_video_duration"
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="10dp"
                        android:text="30 min"
                        android:textColor="#FCFCFF"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserrat"
                        android:text="• Apple Pie"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Updated Just now"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Third CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_cardView4"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/history_plumPudding"
                        android:layout_width="344dp"
                        android:layout_height="179dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/plum_pudding1" />

                    <TextView
                        android:id="@+id/history_videoDuration4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_corner_video_duration"
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="10dp"
                        android:text="30 min"
                        android:textColor="#FCFCFF"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserrat"
                        android:text="• Plum Pudding"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Updated Just now"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Third CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_cardView3"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/history_desserts3"
                        android:layout_width="344dp"
                        android:layout_height="179dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/tacos" />

                    <TextView
                        android:id="@+id/history_videoDuration3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_corner_video_duration"
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="10dp"
                        android:text="30 min"
                        android:textColor="#FCFCFF"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserrat"
                        android:text="• Tacos"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="• Updated 30min" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/history_bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#ffff11"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintTop_toBottomOf="@+id/history_ScrollerView1"
        app:menu="@menu/menu"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>